- form_for @user_session, :url => user_session_path do |f| 
  = f.error_messages 

  %p
    = f.label :email
    = f.text_field :email, :class => :text

  %p 
    = f.label :password
    = f.password_field :password, :class => :text
 
  %p
    = f.check_box :remember_me, :class => :left
    = f.label :remember_me
  
  = render :partial => 'shared/form_submit', :locals => { :text => 'Login' }
  
  %p 
    = link_to "Forgot Password?", forgot_password_url, :class => :small