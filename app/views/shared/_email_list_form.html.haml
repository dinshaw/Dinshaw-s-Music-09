- if defined?(unsubscribe)
  - path = '/unsubscribe'
  - submit_text = 'Unsubscribe'
- else
  - path = '/users'
  - submit_text = 'Signup'
  
#email_form
  - form_for :user, :url => path do |f|
    = f.hidden_field :password, :value => 'password'
    = f.hidden_field :password_confirmation, :value => 'password'
    %p
      = f.text_field :email
      = f.submit submit_text, :class => :submit
