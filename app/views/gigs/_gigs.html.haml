#gigs
  %h2 Gigs
  - @gigs.each do |gig| 
    .gig
      %h3
        %strong
          = link_to gig.venue.name, gigs_path
        /
        = show_time(gig)
      %p 
        = gig.description
      
      - if defined?(full)
        %p 
          = gig.venue.location
        %p 
          = gig.venue.directions
    


  