!!! XML
!!! Strict
%html{html_attrs}
  %head
    %title= page_title
    = stylesheet_link_tag 'screen', :media => 'screen'
    = stylesheet_link_tag 'print', :media => 'print'
    = sprockets_include_tag
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?

  %body#dinshaw
    #container.wrap
      #header
        #nav
          %ul
            %li= link_to "Home", root_path
            %li= link_to "Songs", '/songs'
            %li= link_to "gigs", '/gigs'

        %h1 dinshaw
      #content
        #flash_block
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}" unless msg.blank?

        = yield

      #footer_spacer
    #footer
      .wrap
        %ul
          %li
            = link_to "Unsubscribe from the email list", unsubscribe_path
          %li
            Two
          %li.last
            Three
